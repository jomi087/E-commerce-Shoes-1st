<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Category</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-info bg-gradient fw-semibold " >
    <div class="container">
        <div class="row justify-content-center align-items-center vh-100">
            <p class="text-danger text-center"><%= locals.alert %></p>
            <div class="col-md-6 mt-60">
                <form method="post" action="/admin/editCategory" onsubmit="return validateForm() " >
                    <input type="hidden" name="id" value="<%=category._id%>">

                    <div class="mb-4 mt-30">
                        <label for="product_name" class="form-label">Name</label>
                        <input type="text" name="categoryName" value="<%=category.name%>" id="category-Name" class="form-control border" />
                        <span id="categoryName-error" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Description</label>
                        <textarea name="productDescription" class="form-control border" id="product-description" rows="5" ><%=category.description%></textarea>
                        <span id="description-error" class="text-danger"></span>
                    </div>
                    <div class="d-grid text-end mt-30 col-md-5">
                        <button class="btn btn-primary" type="submit">Update category</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
<script>
    function validateForm() {
        let isValid = true;

        // Get the input elements
        const categoryInput = document.getElementById('category-Name').value.trim();
        const productdescription = document.getElementById('product-description').value.trim() 
        const descriptionError  = document.getElementById('description-error')
        const categoryNameError = document.getElementById('categoryName-error');

        // Clear previous error messages
        categoryNameError.textContent = ''
        descriptionError . textContent = ''

        // Validate category name
        if (!categoryInput) {
            categoryNameError.textContent = 'Field required';
            isValid = false;
        }else if(!/^[A-Z]+$/.test(categoryInput)){
            categoryNameError.innerText = 'Name should Only Contain Capital Alphabetic Charectes';
            isValid = false;
        }
        if(!productdescription){
            descriptionError.textContent = ' Enter discrpition -> (N/A) '
            isValid = false
        }
        return isValid;
    }
</script>

</html>
