    <script>
         let wishlistProducts = [];

        // Fetch wishlist on page load
        window.onload = async function() {
            const response = await fetch('/wishlist/check');
            const data = await response.json();
            console.log(data)

            wishlistProducts = data.productIdsInWishlist;

            updateHeartIcons();
        };

        function updateHeartIcons() {
            wishlistProducts.forEach(productId => {
                const heartIcon = document.querySelector(`.wishList-btn-icon[data-product-id="${productId}"]`);
                if (heartIcon) {
                    heartIcon.classList.remove('bi-heart')
                    heartIcon.classList.add('bi-heart-fill')
                }
            });
        }

        function userLogin(){
            window.location.href = "/login";
        }
    

        async function wishlist(productId){
            try {
                const response = await fetch('/wishlist/toggle',{
                    method : 'POST',
                    headers : {
                        "Content-Type" : 'application/json',
                    },
                    body : JSON.stringify({
                        productId

                    })
                })
                const result = await response.json();
                console.log('result',result)

                if (result.success) {
                    const heartIcon = document.querySelector(`.wishList-btn-icon[data-product-id="${productId}"]`);
                    if(result.action === 'added'){

                        heartIcon.classList.remove('bi-heart')
                        heartIcon.classList.add('bi-heart-fill')
                          

                        Swal.fire({
                            icon: 'success',
                            toast: true, 
                            position: 'bottom', 
                            width : 300,
                            background: '#000',
                            color: '#fff',
                            customClass: {
                                popup: 'swal2-custom-font', // Custom class for font styling
                            },
                            showConfirmButton: false, 
                            timer: 3000, 
                            text: ' Product Added to Wishlist',
                        });
                    }else{
                        heartIcon.classList.remove('bi-heart-fill')
                        heartIcon.classList.add('bi-heart')
                       

                        Swal.fire({
                            icon: 'success',
                            toast: true, // Enable toast mode
                            position: 'bottom', 
                            width : 310,
                            background: '#000',
                            color: '#fff',
                            showConfirmButton: false, // Hide the confirm button
                            customClass: {
                                popup: 'swal2-custom-font', // Custom class for font styling
                            },
                            timer: 3000, // Auto-close  after 3 seconds
                            text: 'Product Removed from Wishlist', 
                        });
                        
                    }
                } else {
                    console.error('Error:', result.message);
                    swal.fire(
                    'Alert!',
                    result.message || "Error in Updating Status",
                    'error'
                    )
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    toast: true,
                    position: 'top-end',
                    background: '#f8d7da',
                    customClass: {
                        popup: 'swal2-custom-font', // Custom class for font styling
                    },
                    width: '280px', 
                    text: 'Something went wrong. Please try again later.',
                    showConfirmButton: false,
                    timerProgressBar: true,
                    timer: 1500,
                });
            }
        }
    </script>
